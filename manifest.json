{

  "manifest_version": 2,
  "name": "vimode",
  "version": "1.0",

  "description": "This is an add-on that enables vi-like operations in firefox.",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "permissions": [
    "sessions"
  ],

  "background": {
    "scripts": ["background-script.js"]
  },

  "content_scripts": [
    {
      "exclude_matches": ["https://github.com/*", "https://gitlab.com/*"
                         ,"https://scrapbox.io/*"],
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ]

}
